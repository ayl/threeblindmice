%html
  %head
    %title aging mice project
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    //= stylesheet_link_tag :all
    = javascript_include_tag :defaults 
    = javascript_include_tag "highcharts.js"
    = javascript_include_tag "jquery.tablesorter.min.js"
    = csrf_meta_tag 
  %body.bp.two-col
    #container
      #header
        %h1 aging mice project
      #sidebar
        %ul
          %li
            = link_to "MicroRNA Meta Statistics", micro_rna_metas_path
          %li 
            = link_to "Browse in micro RNA", micro_rnas_path
          %li 
            = link_to "Search for a gene", micro_rnas_genesearch_path

        %ul
          %li
            = link_to "Whole Transcriptome Meta Statistics", wt_metas_path
          %li 
            = link_to "Browse in whole transcriptome", wts_path
          %li 
            = link_to "Search for a gene", wts_genesearch_path
      #content
        - if flash[:notice]
          #notice
            %p= flash[:notice]
        - if flash[:error]
          #error
            %p= flash[:error]
        = yield
      #footer

