%h2
  = @genename

- if @genename != "intergenic"
  =link_to "NCBI gene link", "http://www.ncbi.nlm.nih.gov/gene?term="+@genename+"[ti]%20AND%20%22mus%20musculus%22[organism]&cmd=DetailsSearch"

#expression_graph	
  
%table#results
  %thead
    %tr
      %th Locus
      %th Type
      %th Min Diff
      %th Min Ratio
      %th Dir
      %th 3 
      %th 6 
      %th 12 
      %th 18 
      %th 24 
      %th 30 
  %tbody
    - for wt in @all
      %tr
        %td.small
          =link_to wt.locus, "search?one=yes&id="+wt.id.to_s
        %td.small
          =wt.genetype
        %td.small
          ="%.2f" % wt.absmindiff
        %td.small
          ="%.2f" % wt.abslogmindiff unless wt.abslogmindiff == nil
        %td.small
          =wt.consistent
        %td.small
          =wt.express3
        %td.small
          =wt.express6
        %td.small
          =wt.express9
        %td.small
          =wt.express12
        %td.small
          =wt.express18
        %td.small
          =wt.express24

:javascript
  $(document).ready(function() { 
          $("#results").tablesorter(); 
      } 
  ); 

:javascript 
  $(function () {  
    new Highcharts.Chart({  
      chart: { renderTo: 'expression_graph' },  
      title: { text: 'Average expression levels' },  
      tooltip: {
         formatter: function() {
            return '<b>'+ this.x +' months</b>: '+ this.y ;
         }
      },
      series: [ 
      {
        name: 'Intergenic',
        data: #{@intergen.to_json}
      }, 
      {
        name: 'Exon',
        data: #{@exon.to_json}
      }, 
      {   
        name: 'Intron',
        data: #{@intron.to_json}
      }
        ]
    });  
  });  

  
